<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
      android:id="@+id/text1"
      style="@style/TextAppearance.Test1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:background="#EEEEEE"
      android:text="テスト"
      app:layout_constraintEnd_toStartOf="@id/text2"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/text2"
      style="@style/TextAppearance.Test2"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:background="#EEEEEE"
      android:text="テスト"
      app:layout_constraintEnd_toStartOf="@id/text3"
      app:layout_constraintStart_toEndOf="@id/text1"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/text3"
      style="@style/TextAppearance.Test3"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:background="#EEEEEE"
      android:text="テスト"
      app:layout_constraintEnd_toStartOf="@id/text4"
      app:layout_constraintStart_toEndOf="@id/text2"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/text4"
      style="@style/TextAppearance.Test4"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:background="#EEEEEE"
      android:text="テスト"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/text3"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/text5"
      style="@style/TextAppearance.Test1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:background="#DDDDDD"
      android:gravity="center_vertical"
      android:text="テストテストテストテストテス"
      app:layout_constraintEnd_toStartOf="@id/text6"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/text1" />

    <TextView
      android:id="@+id/text6"
      style="@style/TextAppearance.Test2"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:background="#DDDDDD"
      android:gravity="center_vertical"
      android:text="テストテストテストテストテス"
      app:layout_constraintEnd_toStartOf="@id/text7"
      app:layout_constraintStart_toEndOf="@id/text5"
      app:layout_constraintTop_toBottomOf="@id/text1" />

    <TextView
      android:id="@+id/text7"
      style="@style/TextAppearance.Test3"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:background="#DDDDDD"
      android:gravity="center_vertical"
      android:text="テストテストテストテストテス"
      app:layout_constraintEnd_toStartOf="@id/text8"
      app:layout_constraintStart_toEndOf="@id/text6"
      app:layout_constraintTop_toBottomOf="@id/text1" />

    <TextView
      android:id="@+id/text8"
      style="@style/TextAppearance.Test4"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:background="#DDDDDD"
      android:gravity="center_vertical"
      android:text="テストテストテストテストテス"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/text7"
      app:layout_constraintTop_toBottomOf="@id/text1" />
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
