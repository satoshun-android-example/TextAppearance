<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:motion="http://schemas.android.com/apk/res-auto">

  <Transition
    android:id="@+id/transition_icon"
    motion:constraintSetEnd="@id/end_icon"
    motion:constraintSetStart="@id/start_icon"
    motion:duration="800" />

  <ConstraintSet android:id="@+id/start_icon">
    <Constraint
      android:id="@id/icon"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:scaleX="0.9"
      android:scaleY="0.9"
      motion:layout_constraintBottom_toBottomOf="parent"
      motion:layout_constraintEnd_toEndOf="parent"
      motion:layout_constraintStart_toStartOf="parent"
      motion:layout_constraintTop_toTopOf="parent" />

    <Constraint android:id="@id/left" />
    <Constraint android:id="@id/right" />
    <!--<Constraint android:id="@id/title" />-->
  </ConstraintSet>

  <ConstraintSet android:id="@+id/end_icon">
    <Constraint
      android:id="@id/icon"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:scaleX="1"
      android:scaleY="1"
      motion:layout_constraintBottom_toBottomOf="parent"
      motion:layout_constraintEnd_toEndOf="parent"
      motion:layout_constraintStart_toStartOf="parent"
      motion:layout_constraintTop_toTopOf="parent" />

    <Constraint android:id="@id/left" />
    <Constraint android:id="@id/right" />
    <!--<Constraint android:id="@id/title" />-->
  </ConstraintSet>

  <KeyFrameSet>
    <KeyAttribute
      android:scaleX="0.90"
      android:scaleY="0.90"
      motion:framePosition="3"
      motion:motionTarget="@id/icon" />

    <KeyAttribute
      android:scaleX="1.10"
      android:scaleY="1.10"
      motion:framePosition="7"
      motion:motionTarget="@id/icon" />

    <KeyAttribute
      android:scaleX="0.9"
      android:scaleY="0.9"
      motion:framePosition="15"
      motion:motionTarget="@id/icon" />

    <KeyAttribute
      android:scaleX="1.1"
      android:scaleY="1.1"
      motion:framePosition="20"
      motion:motionTarget="@id/icon" />

    <KeyAttribute
      android:scaleX="0.9"
      android:scaleY="0.9"
      motion:framePosition="30"
      motion:motionTarget="@id/icon" />

    <KeyAttribute
      android:scaleX="1.1"
      android:scaleY="1.1"
      motion:framePosition="42"
      motion:motionTarget="@id/icon" />

    <KeyAttribute
      android:scaleX="0.9"
      android:scaleY="0.9"
      motion:framePosition="55"
      motion:motionTarget="@id/icon" />

    <KeyAttribute
      android:scaleX="1.1"
      android:scaleY="1.1"
      motion:framePosition="67"
      motion:motionTarget="@id/icon" />

    <KeyAttribute
      android:scaleX="0.9"
      android:scaleY="0.9"
      motion:framePosition="80"
      motion:motionTarget="@id/icon" />
  </KeyFrameSet>
</MotionScene>
