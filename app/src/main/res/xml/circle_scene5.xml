<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:motion="http://schemas.android.com/apk/res-auto">

  <Transition
    android:id="@+id/image_transition"
    motion:constraintSetEnd="@+id/scene4_end"
    motion:constraintSetStart="@+id/scene4_begin"
    motion:duration="1300" />

  <ConstraintSet android:id="@+id/scene4_begin">
    <Constraint
      android:id="@id/left"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:layout_marginEnd="5000dp"
      motion:layout_constraintBottom_toBottomOf="parent"
      motion:layout_constraintEnd_toStartOf="parent"
      motion:layout_constraintTop_toTopOf="parent"
      motion:transitionEasing="cubic(0.07,0.84,0.28,0.99)" />

    <Constraint
      android:id="@id/right"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:layout_marginStart="5000dp"
      motion:layout_constraintBottom_toBottomOf="parent"
      motion:layout_constraintStart_toEndOf="parent"
      motion:layout_constraintTop_toTopOf="parent"
      motion:transitionEasing="cubic(0.07,0.84,0.28,0.99)" />
  </ConstraintSet>

  <ConstraintSet android:id="@+id/scene4_end">
    <Constraint
      android:id="@id/left"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:layout_marginEnd="18dp"
      motion:layout_constraintBottom_toBottomOf="parent"
      motion:layout_constraintEnd_toStartOf="@id/right"
      motion:layout_constraintHorizontal_chainStyle="packed"
      motion:layout_constraintStart_toStartOf="parent"
      motion:layout_constraintTop_toTopOf="parent" />

    <Constraint
      android:id="@id/right"
      android:layout_width="120dp"
      android:layout_height="120dp"
      motion:layout_constraintBottom_toBottomOf="parent"
      motion:layout_constraintEnd_toEndOf="parent"
      motion:layout_constraintStart_toEndOf="@id/left"
      motion:layout_constraintTop_toTopOf="parent" />
  </ConstraintSet>

  <KeyFrameSet>
    <KeyAttribute
      android:alpha="0"
      motion:framePosition="0"
      motion:motionTarget="@id/title" />

    <KeyAttribute
      android:alpha="1"
      motion:framePosition="30"
      motion:motionTarget="@id/title" />
  </KeyFrameSet>

  <KeyFrameSet>
    <KeyAttribute
      android:rotation="-45"
      motion:framePosition="0"
      motion:motionTarget="@id/left" />

    <KeyAttribute
      android:rotation="-45"
      motion:framePosition="95"
      motion:motionTarget="@id/left" />

    <KeyAttribute
      android:rotation="0"
      motion:framePosition="100"
      motion:motionTarget="@id/left" />
  </KeyFrameSet>

  <KeyFrameSet>
    <KeyAttribute
      android:rotation="45"
      motion:framePosition="0"
      motion:motionTarget="@id/right" />

    <KeyAttribute
      android:rotation="45"
      motion:framePosition="95"
      motion:motionTarget="@id/right" />

    <KeyAttribute
      android:rotation="0"
      motion:framePosition="100"
      motion:motionTarget="@id/right" />
  </KeyFrameSet>

  <Transition
    android:id="@+id/icon_transition"
    motion:constraintSetEnd="@id/scene5_icon_end"
    motion:constraintSetStart="@id/scene5_icon_begin" />

  <ConstraintSet android:id="@+id/scene5_icon_begin">
    <Constraint
      android:id="@id/icon"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:scaleX="0.9"
      android:scaleY="0.9"
      android:visibility="invisible"
      motion:layout_constraintBottom_toBottomOf="parent"
      motion:layout_constraintEnd_toEndOf="parent"
      motion:layout_constraintStart_toStartOf="parent"
      motion:layout_constraintTop_toTopOf="parent" />
  </ConstraintSet>

  <ConstraintSet android:id="@+id/scene5_icon_end">
    <Constraint
      android:id="@id/icon"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:scaleX="1"
      android:scaleY="1"
      android:visibility="visible"
      motion:layout_constraintBottom_toBottomOf="parent"
      motion:layout_constraintEnd_toEndOf="parent"
      motion:layout_constraintStart_toStartOf="parent"
      motion:layout_constraintTop_toTopOf="parent" />
  </ConstraintSet>

  <KeyFrameSet>
    <KeyAttribute
      android:scaleX="0.90"
      android:scaleY="0.90"
      motion:framePosition="3"
      motion:motionTarget="@id/icon" />

    <KeyAttribute
      android:scaleX="1.10"
      android:scaleY="1.10"
      motion:framePosition="7"
      motion:motionTarget="@id/icon" />

    <KeyAttribute
      android:scaleX="0.9"
      android:scaleY="0.9"
      motion:framePosition="15"
      motion:motionTarget="@id/icon" />

    <KeyAttribute
      android:scaleX="1.1"
      android:scaleY="1.1"
      motion:framePosition="20"
      motion:motionTarget="@id/icon" />

    <KeyAttribute
      android:scaleX="0.9"
      android:scaleY="0.9"
      motion:framePosition="30"
      motion:motionTarget="@id/icon" />

    <KeyAttribute
      android:scaleX="1.1"
      android:scaleY="1.1"
      motion:framePosition="42"
      motion:motionTarget="@id/icon" />

    <KeyAttribute
      android:scaleX="0.9"
      android:scaleY="0.9"
      motion:framePosition="55"
      motion:motionTarget="@id/icon" />

    <KeyAttribute
      android:scaleX="1.1"
      android:scaleY="1.1"
      motion:framePosition="67"
      motion:motionTarget="@id/icon" />

    <KeyAttribute
      android:scaleX="0.9"
      android:scaleY="0.9"
      motion:framePosition="80"
      motion:motionTarget="@id/icon" />
  </KeyFrameSet>
</MotionScene>
